                        Name="DownloadTxt"
                        RelativePanel.AlignTopWithPanel="True"
                        RelativePanel.AlignLeftWithPanel="True"
                        Margin="10"
                        Text="离线缓存"/>
                <!--<TextBlock
                        Margin="0,10,0,10"
                        RelativePanel.RightOf="DownloadTxt"
                        Foreground="Gray"
                        FontSize="13"
                        Text="剩余(1.0GB)"/>-->
                <ListView
                        BorderBrush="WhiteSmoke"
                        BorderThickness="0,0.5,0,0.5"
                        Name="QualitySelectionPanel"
                        RelativePanel.Below="DownloadTxt"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignRightWithPanel="True">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListViewItem>
                        <TextBlock Text="超清"/>
                    </ListViewItem>
                    <ListViewItem>
                        <TextBlock Text="清晰"/>
                    </ListViewItem>
                    <ListViewItem>
                        <TextBlock Text="流畅"/>
                    </ListViewItem>
                </ListView>
                <controls:AdaptiveGridView
                        x:Name="PagesSelectionPanel"
                        RelativePanel.Below="QualitySelectionPanel"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignRightWithPanel="True"
                        ItemsSource="{x:Bind Info.Pages,Mode=OneWay}"
                        SelectionMode="Multiple"
                        DesiredWidth="150"
                        ItemContainerStyle="{StaticResource MuiltSelectionGridViewStyle}">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate x:DataType="model:VideoPageViewModel">
                            <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize ="13"
                                    Text="{x:Bind Part}"
                                    MaxLines="2"
                                    TextWrapping="Wrap"
                                    TextTrimming="CharacterEllipsis"/>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
                <Button
                        Click="SelectAllButton_Click"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="0.5"
                        Background="White"
                        Width="200"
                        Name="SelectAllButton"
                        RelativePanel.Below="PagesSelectionPanel"
                        RelativePanel.AlignLeftWithPanel="True"
                        Content="全部选择"/>
                <Button
                        Click="BeginDownloadButton_Click"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="0.5"
                        Background="White"
                        Width="200"
                        Name="BeginDownloadButton"
                        RelativePanel.Below="PagesSelectionPanel"
                        RelativePanel.RightOf="SelectAllButton"
                        Content="开始下载"/>
            </RelativePanel>
        </Popup>
        <local:MessageShow 
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                x:Name="MessageShow" 
                Margin="10"
            />
    </RelativePanel>
</Page>
